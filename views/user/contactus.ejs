    <style>

.contact-section {
    background-color: #f8f9fa;
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
}


.contact-section .display-4 {
    color: #2c3e50;
    font-family: 'Playfair Display', serif;
    letter-spacing: -0.5px;
}

.contact-section .lead {
    color: #666;
    font-weight: 300;
}

.contact-form-wrapper {
    background: white;
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.contact-form .form-control {
    border: 2px solid #eee;
    padding: 0.8rem 1.2rem;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.contact-form .form-control:focus {
    border-color: #3498db;
    box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.1);
}

.contact-form textarea {
    resize: none;
}

.contact-form .btn-primary {
    background-color: #3498db;
    border: none;
    padding: 1rem;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.contact-form .btn-primary:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
}


.contact-info {
    background: white;
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.contact-info h3 {
    color: #2c3e50;
    font-family: 'Playfair Display', serif;
}

.contact-item {
    display: flex;
    align-items: center;
    font-size: 1.1rem;
}

.contact-item i {
    color: #3498db;
    font-size: 1.2rem;
    width: 30px;
}

.contact-item a {
    color: #666;
    text-decoration: none;
    transition: color 0.3s ease;
}

.contact-item a:hover {
    color: #3498db;
}


.social-links {
    margin-top: 2rem;
}

.social-links a {
    color: #666;
    font-size: 1.5rem;
    transition: all 0.3s ease;
}

.social-links a:hover {
    color: #3498db;
    transform: translateY(-3px);
}


.map-wrapper {
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}


@media (max-width: 768px) {
    .contact-form-wrapper,
    .contact-info {
        padding: 1.5rem;
    }
    
    .contact-section .display-4 {
        font-size: 2.5rem;
    }
    
    .map-wrapper {
        margin-top: 2rem;
    }
}


@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.contact-form-wrapper,
.contact-info,
.map-wrapper {
    animation: fadeInUp 0.6s ease-out forwards;
}
    </style>

    </head>


    <body>


    <%- include('./common-ele/nav') %>

    <section class="contact-section py-5">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-8 text-center">
                    <h1 class="display-4 fw-bold mb-3">Get In Touch</h1>
                    <p class="lead">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
                </div>
            </div>

            <div class="row g-5">
                <div class="col-lg-6">
                    <div class="contact-form-wrapper">
                        <form id="contactForm" class="contact-form">
                            <div class="mb-4">
                                <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                            </div>
                            <div class="mb-4">
                                <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                            </div>
                            <div class="mb-4">
                                <input type="text" class="form-control" name="subject" placeholder="Subject" required>
                            </div>
                            <div class="mb-4">
                                <textarea class="form-control" name="message" rows="5" placeholder="Your Message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="contact-info mb-5">
                        <h3 class="mb-4">Contact Information</h3>
                        <div class="contact-item mb-3">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:nikhilpramod425@gmail.com">nikhilpramod425@gmail.com</a>
                        </div>
                        <div class="contact-item mb-3">
                            <i class="fas fa-phone"></i>
                            <span>+1 111 222 3333</span>
                        </div>
                        <div class="contact-item mb-4">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Tokyo, Japan</span>
                        </div>
                        <div class="social-links">
                            <a href="#" class="me-3"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="me-3"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-linkedin"></i></a>
                        </div>
                    </div>
                    <div class="map-wrapper">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1662975.6967201228!2d138.45017088118882!3d35.50429287541856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x605d1b87f02e57e7%3A0x2e01618b22571b89!2sTokyo%2C%20Japan!5e0!3m2!1sen!2sin!4v1735494742633!5m2!1sen!2sin" 
                                width="100%" height="400" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include('./common-ele/footer') %>

    <script>
        document.getElementById('contactForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const formProps = Object.fromEntries(formData);
            console.log(formProps);
            
        
            try {
                const response = await fetch('/send-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formProps)
                });
        
                const data = await response.json();
        
                console.log(data);
                
                if (response.ok) {
                
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Your message has been sent successfully!',
                        confirmButtonColor: '#3498db',
                    }).then(() => {
                
                        e.target.reset();
                    });
                } else {

                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message || 'Something went wrong!',
                        confirmButtonColor: '#3498db',
                    });
                }
            } catch (error) {
            
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'There was a problem connecting to the server.',
                    confirmButtonColor: '#3498db',
                });
            }
        });
        </script>

    <script src="/js/nav.js"></script>

